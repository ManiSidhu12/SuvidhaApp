<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transbg">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_centerInParent="true"
    >
        <RelativeLayout
                android:id="@+id/dummylay"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"/>


        <RelativeLayout
                android:id="@+id/laytitle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/dummylay"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="40dp"
                      android:layout_centerInParent="true"
                      android:text="Complaint/Schedule Menu"
                      android:textSize="16sp"
                      android:textColor="@android:color/white"

                      android:gravity="center"/>
        </RelativeLayout>
        <Button android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/dummylay"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_close"
                android:layout_marginBottom="-15dp"
                android:background="@drawable/close"
                android:backgroundTint="@color/white"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/laytitle"
                      android:layout_centerHorizontal="true"
                      android:orientation="vertical"
                      android:background="@android:color/white"
        >
            <TextView
                    android:id="@+id/followup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Go to FollowUp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:gravity="start|center"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/darker_gray"
            />
            <TextView
                    android:id="@+id/forward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Forward to other Department"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:gravity="start|center"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_marginTop="4dp"
                  android:layout_gravity="center_horizontal"
            />
            <TextView
                    android:id="@+id/techletter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="View Tech Letter/Close Schedule"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:gravity="start|center"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_marginTop="4dp"
                  android:layout_gravity="center_horizontal"
            />
            <TextView
                    android:id="@+id/call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="View Call/Complaint"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:gravity="start|center"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_marginTop="4dp"
                  android:layout_gravity="center_horizontal"
            />
            <TextView
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Upload/View documents"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:gravity="start|center"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>