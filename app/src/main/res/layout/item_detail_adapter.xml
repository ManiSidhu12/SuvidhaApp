<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="5dp"
              android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/layClick" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/lay_click_item" android:layout_width="match_parent" android:layout_height="wrap_content"
                >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_centerInParent="true"
                      android:id="@+id/txt_item_no"
                      android:textColor="@color/dark_blue"
                      android:textSize="13sp"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:gravity="start|center"
                      android:text="R605075"
                      android:padding="3dp"/>

            <ImageView
                    android:id="@+id/drop_img_item" android:layout_width="16dp" android:layout_height="16dp"
                    android:layout_toEndOf="@+id/txt_item_no"
                    android:layout_centerInParent="true"
                    android:tint="@color/dark_blue"
                    android:src="@drawable/ic_expand_more_black_24dp"
            />
        </RelativeLayout>


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                      android:id="@+id/txt_item_name"
                      android:textColor="@android:color/black"
                      android:textSize="14sp"
                      android:gravity="start|center"
                      android:layout_marginEnd="4dp"
                  android:fontFamily="sans-serif"
                      android:text="Bag holder 65MM L 62MM Width"
                      android:textStyle="bold"
                      android:padding="3dp"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_centerInParent="true"
                      android:id="@+id/txt_item_qty"
                      android:textSize="14sp"
                      android:text="50.532 kgs"
                      android:gravity="start|center"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:padding="3dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_toEndOf="@+id/txt_item_qty"
                      android:layout_marginStart="20dp"
                      android:layout_centerInParent="true"
                      android:id="@+id/txt_item_price"
                      android:textSize="14sp"
                      android:gravity="start|center"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:padding="3dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
android:layout_alignParentEnd="true"
                      android:layout_marginEnd="5dp"
                      android:layout_centerInParent="true"
                      android:id="@+id/txt_rate_history"
                      android:textSize="14sp"
                      android:gravity="start|center"
                      android:fontFamily="sans-serif"
                      android:textColor="@color/red"
                      android:textStyle="bold"
                      android:text="Rate History"
                      android:padding="3dp"/>

        </RelativeLayout>

    </LinearLayout>
    <View
            android:id="@+id/line_btns"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:background="@android:color/darker_gray"/>

    <LinearLayout
            android:id="@+id/lay_btns"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

        <RelativeLayout
                android:id="@+id/btn_delivery_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

            <TextView
                    android:id="@+id/txt_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="start|center"
                    android:text="Delivery Schedule"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
        </RelativeLayout>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

        <RelativeLayout
                android:id="@+id/btn_stock_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">


            <TextView
                    android:id="@+id/txt_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Stock Status"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

