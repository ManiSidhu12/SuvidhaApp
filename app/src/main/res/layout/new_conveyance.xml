<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Conveyance Form(New)"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/black"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
                          android:weightSum="3"
                          android:orientation="horizontal"
            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp" android:layout_height="match_parent"
                android:text="Name"
                      android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                          android:padding="4dp"
                android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                            android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <Spinner
                            android:id="@+id/spin_name"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_height="match_parent"></Spinner>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                          android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/designation"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Designation"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                              android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_designation"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/dept"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Department"
                      android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                             android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_dept"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                          android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/hod"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Head of Dept."
                     android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                                android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_hod"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/convo_no"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Last Convo No"
                       android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                                android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_convono"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/convo_date"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Conv Date"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                               android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <TextView
                            android:id="@+id/txt_convo_date"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></TextView>

                </RelativeLayout>

            </LinearLayout>
<View android:layout_width="match_parent" android:layout_height="1dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="20dp"
      android:background="@android:color/darker_gray"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="10dp"
                      android:text="Conveyance Detail"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:textColor="@android:color/black"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                          android:weightSum="3"
                          android:orientation="horizontal"
                            >
                <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Date"
                       android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                             android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></TextView>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                          android:weightSum="3"
                          android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/mode"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Mode"
                       android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                               android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <Spinner
                            android:id="@+id/spin_mode"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_height="match_parent"></Spinner>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                          android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/km"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="K.M."
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                               android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_km"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal"
                      android:weightSum="2">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="Time In"
                          android:textColor="@android:color/black"
                          android:padding="2dp"
                          android:layout_gravity="center_horizontal"
                          android:gravity="start|center"
                          android:textSize="16sp"/>
                <RelativeLayout
                        android:id="@+id/lay_time_in" android:layout_width="match_parent" android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:background="@drawable/spin_bg">
                    <TextView
                            android:id="@+id/txt_time_in"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="7dp"
                            android:textSize="16sp"
                            android:gravity="start|center"
                            android:textColor="@android:color/black"
                            android:text="07-12-2018"></TextView>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="Time Out"
                          android:textColor="@android:color/black"
                          android:padding="2dp"
                          android:layout_gravity="center_horizontal"
                          android:gravity="start|center"
                          android:textSize="16sp"/>
                <RelativeLayout
                        android:id="@+id/lay_time_out" android:layout_width="match_parent" android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:background="@drawable/spin_bg">
                    <TextView
                            android:id="@+id/txt_time_out"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="7dp"
                            android:textSize="16sp"
                            android:gravity="start|center"
                            android:textColor="@android:color/black"
                            android:text="07-12-2018"></TextView>

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                          android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/rate"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Rate/KM."
                      android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                               android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_rate"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/amount"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Amount"
                       android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                               android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_amount"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                          android:weightSum="3"
                            android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/remark"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:text="Brief Remark"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="0dp" android:layout_height="40dp"
                               android:layout_weight="2"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_remark"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"></EditText>

                </RelativeLayout>

            </LinearLayout>
            <Button android:layout_width="140dp" android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textAllCaps="false"
            android:text="Add to List"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>