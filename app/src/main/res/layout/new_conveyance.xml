<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary">
        <ImageView
                android:id="@+id/img_back"
                android:layout_width="22dp" android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="12dp"
                android:tint="@android:color/white"
                android:src="@drawable/back_arrow"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:layout_centerInParent="true"
                  android:text="Conveyance Form(New)"
                  android:textColor="@android:color/white"
                  android:textSize="16sp"
                  android:gravity="center"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
            <!--
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:text=""
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>
            -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
            >
                <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:padding="2dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <Spinner
                            android:id="@+id/spin_name"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/designation"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Designation"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_designation"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/dept"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Department"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_dept"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/hod"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Head of Dept."
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_hod"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/convo_no"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Last conveyance no."
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_convono"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/convo_date"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Convayence Date"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:id="@+id/lay_conv_date"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <TextView
                            android:id="@+id/txt_convo_date"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="5dp"
                  android:visibility="gone"
                  android:background="@android:color/darker_gray"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="5dp"
                      android:text="Conveyance Details:-"
                      android:textSize="14sp"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:gravity="start|center"
                      android:textColor="@android:color/black"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
            >
                <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:id="@+id/lay_date"
                                android:background="@drawable/spin_bg">
                    <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/mode"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Mode"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <Spinner
                            android:id="@+id/spin_mode"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/km"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="K.M."
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_km"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginTop="5dp"
                          android:orientation="horizontal"
                          android:weightSum="2">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="Time In"
                              android:textColor="@android:color/black"
                              android:padding="2dp"
                              android:textStyle="bold"
                              android:fontFamily="sans-serif"
                              android:layout_gravity="center_horizontal"
                              android:gravity="start|center"
                              android:textSize="13sp"/>
                    <RelativeLayout
                            android:id="@+id/lay_time_in" android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:background="@drawable/spin_bg">
                        <TextView
                                android:id="@+id/txt_time_in"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="7dp"
                                android:layout_toStartOf="@+id/img_cncl1"
                                android:layout_marginEnd="2dp"
                                android:textSize="13sp"
                                android:gravity="start|center"
                                android:textColor="@android:color/black"
                                android:text="mm/dd/yyyy --:--:--"/>
                        <ImageView
                                android:id="@+id/img_cncl1" android:layout_width="17dp" android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone"
                                android:src="@drawable/close"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="Time Out"
                              android:textStyle="bold"
                              android:fontFamily="sans-serif"
                              android:textColor="@android:color/black"
                              android:padding="2dp"
                              android:layout_gravity="center_horizontal"
                              android:gravity="start|center"
                              android:textSize="13sp"/>
                    <RelativeLayout
                            android:id="@+id/lay_time_out" android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:background="@drawable/spin_bg">
                        <TextView
                                android:id="@+id/txt_time_out"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@+id/img_cncl"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="7dp"
                                android:textSize="13sp"
                                android:gravity="start|center"
                                android:textColor="@android:color/black"
                                android:text="mm/dd/yyyy --:--:--"/>
                        <ImageView
                                android:id="@+id/img_cncl" android:layout_width="17dp" android:layout_height="17dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone"
                                android:src="@drawable/close"/>

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/rate"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Rate/KM."
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginEnd="7dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_rate"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_amount"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp">
                <TextView
                        android:id="@+id/remark"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Brief Remark"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:gravity="start|center"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/spin_bg">
                    <EditText
                            android:id="@+id/edt_remark"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:hint="Type here.."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="start|center"
                            android:padding="4dp"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>
            <Button android:layout_width="match_parent" android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@color/green"
                    android:text="Add to List"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>