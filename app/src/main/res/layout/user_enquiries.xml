<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="15dp"
                  android:orientation="horizontal"
                  android:id="@+id/lay_dates"
                  android:visibility="gone"
                  android:weightSum="2">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="From Date"
                      android:textColor="@android:color/black"
                      android:padding="2dp"
                      android:layout_gravity="center_horizontal"
                      android:gravity="start|center"
                      android:textStyle="bold"
                      android:fontFamily="sans-serif"
                      android:textSize="13sp"/>
            <RelativeLayout
                    android:id="@+id/lay_from_date" android:layout_width="match_parent" android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/spin_bg">
                <TextView
                        android:id="@+id/txt_from_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7dp"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="07-12-2018"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:orientation="vertical"

                      android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="To Date:"
                      android:textColor="@android:color/black"
                      android:padding="2dp"
                      android:layout_gravity="center_horizontal"
                      android:gravity="start|center"
                      android:textSize="13sp"/>
            <RelativeLayout
                    android:id="@+id/lay_to_date" android:layout_width="match_parent" android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/spin_bg">
                <TextView
                        android:id="@+id/txt_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7dp"
                        android:textSize="13sp"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="07-12-2018"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="200dp" android:layout_height="40dp"
    android:id="@+id/btn_apply"
            android:textAllCaps="false"
            android:text="Apply"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
    android:layout_gravity="center_horizontal"/>
<android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_enquiry"
        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>