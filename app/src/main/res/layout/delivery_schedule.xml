<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#caeafd"
              android:layout_margin="5dp">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="end|center_horizontal"
              android:id="@+id/txt_item_code"
              android:textColor="@android:color/black"
              android:textSize="16sp"
              android:gravity="end|center"
              android:layout_marginEnd="4dp"
              android:text="R104678"
              android:visibility="gone"
              android:padding="3dp"/>
    <RelativeLayout
            android:id="@+id/lay_delivery_data" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_centerInParent="true"
                  android:id="@+id/txt_date_scheduled"
                  android:layout_marginStart="4dp"
                  android:textColor="@android:color/black"
                  android:textSize="13sp"
                  android:fontFamily="sans-serif"
                  android:textStyle="bold"
                  android:gravity="start|center"
                  android:text="Scheduled Dly. : 10-12-2018"
                  android:padding="3dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/txt_quantity"
                  android:layout_alignParentEnd="true"
                  android:layout_centerInParent="true"
                  android:textSize="13sp"
                  android:textColor="@android:color/black"
                  android:gravity="end|center"
                  android:text="10.00 kgs"
                  android:fontFamily="sans-serif"
                  android:textStyle="bold"
                  android:paddingEnd="5dp"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerInParent="true"
                      android:layout_marginEnd="4dp"
                      android:layout_marginTop="2dp"
                      android:visibility="gone"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="end"
                      android:textSize="12sp"
                      android:gravity="end|center"
                      android:text="Scheduled Date:"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:paddingEnd="3dp"
                      android:paddingTop="3dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/txt_deliverydate"
                      android:layout_gravity="end"
                      android:textSize="13sp"
                      android:textColor="@android:color/black"
                      android:gravity="end|center"
                      android:text="10-12-1018"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:paddingEnd="5dp"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/lay_stock_data"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
    >
        <RelativeLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_centerInParent="true"
                      android:layout_toStartOf="@+id/txt_item_no"
                      android:id="@+id/txt_branch_name"
                      android:textColor="@android:color/black"
                      android:textSize="14sp"
                      android:gravity="start|center"
                      android:layout_marginEnd="4dp"
                      android:text="Unit-Ambala"
                      android:textStyle="bold"
                      android:fontFamily="sans-serif"
                      android:padding="3dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerInParent="true"
                      android:layout_marginEnd="7dp"
                      android:id="@+id/txt_consumed"

                      android:textSize="14sp"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:gravity="end|center"
                      android:text="Consumed: 30000.977"
                      android:padding="3dp"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal"
                      android:layout_marginStart="4dp"
                      android:layout_marginEnd="5dp"
                      android:weightSum="3">
            <TextView
                    android:id="@+id/on_plan" android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="On Plan: 20000.899"/>
            <TextView
                    android:id="@+id/in_stock" android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="Stk. : 10000.999"/>
            <TextView
                    android:id="@+id/on_order" android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:gravity="end|center"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:paddingEnd="3dp"
                    android:text="On Ord.: 55555.666"/>

        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:background="@android:color/darker_gray"/>
</LinearLayout>